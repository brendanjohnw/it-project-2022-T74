<script src="/public/js/bootstrap.js"></script>

<head>
    <script crossorigin="anonymous" src="https://kit.fontawesome.com/2e58876b6d.js"></script>

</head>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-40">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow card-registration" style="border-radius: 15px;">
                    <div class="p-5 text-center">
                        <i class="fa-solid fa-fingerprint fa-6x"></i>
                        <br />
                        <br />
                        <h3>Enter a username and a <strong>(secure)</strong> password</h3>
                        <br />
                        <form action="/register" method="post">
                            <div class="form-outline">
                                <input
                                    type="text"
                                    name="username"
                                    id="username"
                                    class="form-control form-control-sm"
                                    placeholder="A cool username"
                                />
                            </div>
                            <br />
                            <div class="form-outline">
                                <input
                                    type="password"
                                    name="password"
                                    id="password"
                                    class="form-control form-control-sm"
                                    placeholder="A very secure password please"
                                />
                            </div>
                            <br />
                            {{#if message}}
                                <div style="text-align: center" class="alert alert-user-exist">
                                    <strong>{{message}}</strong>
                                </div>
                            {{/if}}
                            <br />
                            <button type="submit" class="btn btn-primary btn-md">Start Book keeping!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>